container_commands:
  01_migrate:
    command: "python foo/manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "python foo/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "foo.settings"
    "PYTHONPATH": "/opt/python/current/app/foo:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: foo/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "/static/"